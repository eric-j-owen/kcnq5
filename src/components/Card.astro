---
type Props = {
  title: string;
  content: string;
};

const { title, content } = Astro.props;
---

<div class="card">
  <h3>{title}</h3>
  <p>{content}</p>
</div>

<style>
  .card {
    border: 1px solid var(--accent);
    font-size: 16px;
    text-align: center;
    max-width: 400px;
    padding: 8px;
  }

  .card h3 {
    padding-block-start: 8px;
  }
</style>
